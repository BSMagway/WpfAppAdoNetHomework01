<Window x:Class="WpfAppAdoNetHomework01.SelectOneCaloriesWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfAppAdoNetHomework01"
        mc:Ignorable="d"
        Title="SelectOneCaloriesWindow" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        
        <TextBlock x:Name="TextBlockLessOrMore"
                   Grid.Row="0"
                   HorizontalAlignment="Center"
                   VerticalAlignment="Center"
                   FontSize="40"/>

        <TextBox x:Name="CaloriesEnter" 
                 Grid.Row="1"
                 HorizontalContentAlignment="Center"
                 VerticalContentAlignment="Center"
                 FontSize="40"
                 TextChanged="CaloriesEnter_TextChanged"/>

        <Button x:Name="CloseButton"
                Grid.Row="2" 
                Content="Close" 
                FontSize="40"
                Click="CloseButton_Click"
                IsEnabled="False">
        </Button>

    </Grid>
</Window>
