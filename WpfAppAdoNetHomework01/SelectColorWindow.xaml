<Window x:Class="WpfAppAdoNetHomework01.SelectColorWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfAppAdoNetHomework01"
        mc:Ignorable="d"
        Title="SelectColorWindow" Height="450" Width="800"
        Loaded="WindowSelectColor_Loaded">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>

        <ComboBox x:Name="ListColor" 
                  Grid.Row="0"
                  HorizontalContentAlignment="Center"
                  VerticalContentAlignment="Center"
                  FontSize="40"
                  SelectionChanged="ComboBoxColor_SelectionChanged">
            
        </ComboBox>

        <Button x:Name="CloseButton"
                Grid.Row="1" 
                Content="Close" 
                FontSize="40"
                Click="CloseButton_Click"
                IsEnabled="False">
        </Button>
        
    </Grid>
</Window>
